generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Trainer {
  id String @id @default(cuid())
  name String

  pokemon Pokemon[]
}

model Pokemon {
  id String @id @default(cuid())
  name String @unique

  trainer Trainer @relation(fields: [trainerId], references: [id])
  trainerId String
}

