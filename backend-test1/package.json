{
  "name": "backend-test1",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "test:db:up": "docker compose -f docker-compose.test.yml up -d",
    "test:db:down": "docker compose -f docker-compose.test.yml down -d",
    "test:db:migrate": "npx dotenv-cli -e .env.test -- npx prisma migrate dev",
    "test:server:up": "npx dotenv-cli -e .env.test -- pm2 start 'bun server/server.ts' --name testserver",
    "test:server:down": "pm2 delete testserver",
    "test:run": "npx dotenv-cli -e .env.test -- vitest run",
    "test-db": "npm run test:db:up ; npm run test:db:migrate ; npm run test:server:up ; npm run seed:test:db:integrated ; npm run test:run ; npm run test:server:down ; npm run test:db:down",
    "start": "bun run index.ts",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "seed:test:db:isolated": "npx dotenv-cli -e .env.test -- npx tsx src/dbSeeds.ts",
    "seed:test:db:integrated": "npx dotenv-cli -e .env.test -- npx tsx server/dbSeeds.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@prisma/client": "^5.15.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/bun": "^1.1.5",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vitest": "^1.6.0"
  },
  "module": "index.ts"
}
